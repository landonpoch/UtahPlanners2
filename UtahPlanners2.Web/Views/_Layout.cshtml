<!DOCTYPE html>
<html lang="en" ng-app="app">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title ng-bind="title">Utah Planners - A Project by Paul Anderson</title>
    <meta name="description" content="@PageData["description"]">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @Styles.Render("~/content/css/app")
</head>
<body>
    <!--[if lt IE 9]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->

    <header class="navbar" role="banner" ng-if=" !layout ">@* The 'layout' property is set inside the app.run(..) method on '$stateChangeSuccess' *@
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".spa-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="./" class="navbar-brand">
                    <div>UtahPlanners.com</div>
                    <span class="navbar-tagline">A project by Paul Anderson</span>
                </a>
            </div>
            <nav class="collapse navbar-collapse spa-navbar-collapse" role="navigation">
                <ul class="navbar-nav nav">
                    <li>
                        <a href="./contacts">Index</a>
                    </li>
                    <li>
                        <a href="./about">About</a>
                    </li>
                    <li>
                        <a href="./login">Sign In</a>
                    </li>
                </ul>
            </nav>
        </div>
    </header>

    <div id="ui-view" class="container" ui-view data-tmpl-url="@Request.RequestContext.RouteData.DataTokens["templateUrl"]">
        <div class="col-md-3">
            <ul class="nav nav-stacked">
                <li class="nav-section">Condo Type</li>
                <li>
                    <ul class="nav nav-stacked">
                        <li><a href="#">Stacked Flats</a></li>
                        <li><a href="#">Twin Homes</a></li>
                        <li><a href="#">Townhomes</a></li>
                    </ul>
                </li>
                <li class="nav-section">Density</li>
                <li>
                    <ul class="nav nav-stacked">
                        <li><a href="#">Less than 10</a></li>
                        <li><a href="#">10 to 13</a></li>
                        <li><a href="#">14 to 16</a></li>
                        <li><a href="#">17 to 20</a></li>
                        <li><a href="#">More than 20</a></li>
                    </ul>
                </li>
                <li class="nav-section">Local Services</li>
                <li>
                    <ul class="nav nav-stacked">
                        <li><a href="#">High</a></li>
                        <li><a href="#">Medium</a></li>
                        <li><a href="#">Low</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>

    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.3/angular.min.js"></script>
    @Scripts.Render("~/js/app")
